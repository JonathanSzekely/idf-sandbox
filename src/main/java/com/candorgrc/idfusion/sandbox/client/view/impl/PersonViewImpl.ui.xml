<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:dp="urn:import:com.candorgrc.idfusion.sandbox.client.datapresentation">

	<ui:style src="">
	
	</ui:style>

	<g:HTMLPanel styleName="person-view filters-active">
		<nav class="mobile-menu">
			<button class="filters-view" onclick="activateView('filters');">
				<i class="fas fa-filter"></i>
				<label>Filters</label>
			</button>

			<button class="collection-view" onclick="activateView('collection');">
				<i class="fas fa-th-list"></i>
				<label>Collection</label>
			</button>		
		</nav>

		<header class="toolbar">
			<!-- <button class="toolbar-toggle" onclick="toggleToolbar()">
				<i class="fas fa-chevron-left"></i>
				<i class="fas fa-chevron-right"></i>
			</button> -->
			<div class="filter-toolbar">

				<div class="section-title">Personal</div>

				<div class="row">
					<div class="first-name form-field">
						<span class="label">First Name</span>
						<input type="text" class="value" />
					</div>
	
					<div class="last-name form-field">
						<span class="label">Last Name</span>
						<input type="text" class="value" />
					</div>
				</div>


				<div class="row">
					<div class="title form-field">
						<span class="label">Title</span>
						<select class="value">
							<option value=""></option>
							<option value="Mr.">Mr.</option>
							<option value="Mrs.">Mrs.</option>
							<option value="Ms.">Ms.</option>
						</select>
					</div>
	
					<div class="suffix form-field">
						<span class="label">Suffix</span>
						<select class="value">
							<option value=""></option>
							<option value="PhD">PhD.</option>
							<option value="Engineer">Engineer</option>
							<option value="Doctor">Doctor</option>
						</select>
					</div>

					<div class="gender form-field">
						<span class="label">Gender</span>
						<select class="value">
							<option value=""></option>
							<option value="m">Male</option>
							<option value="f">Female</option>
						</select>
					</div>
				</div>
				

				<div class="row">
					<div class="race form-field">
						<span class="label">Race</span>
						<input type="text" class="value" />
					</div>
	
					<div class="language form-field">
						<span class="label">Language</span>
						<input type="text" class="value" />
					</div>
				</div>

				<div class="section-title">Education</div>

				<div class="university form-field">
					<span class="label">University</span>
					<input type="text" class="value" />
				</div>

				<div class="section-title">Work</div>

				<div class="job-title form-field">
					<span class="label">Job Title</span>
					<input type="text" class="value" />
				</div>

				<div class="company form-field">
					<span class="label">Company</span>
					<input type="text" class="value" />
				</div>

				<div class="row">
	
					<div class="dept form-field">
						<span class="label">Department</span>
						<input type="text" class="value" />
					</div>

					<div class="ein form-field">
						<span class="label">Employer ID</span>
						<input type="text" class="value" />
					</div>
				</div>

				<div class="email form-field">
					<span class="label">E-Mail</span>
					<input type="text" class="value" />
				</div>

				<div class="section-title">Professional</div>

				<div class="buzzword form-field">
					<span class="label">Buzzword</span>
					<input type="text" class="value" />
				</div>				
				
				<div class="linkedin-skill form-field">
					<span class="label">LinkedinIn Skill</span>
					<input type="text" class="value" />
				</div>


				<div class="row">
					<div class="start-date form-field">
						<label for="start">Start</label>
						<input type="date" id="start" value="2018-09-29"
							min="2018-01-01" max="2018-12-31" />
					</div>
	
					<div class="end-date form-field">
						<label for="end">End</label>
						<input type="date" id="end" value="2018-10-29"
							min="2018-01-01" max="2018-12-31" />
					</div>
				</div>

			</div>
			<button ui:field="apply" class="apply-filters">Apply Filters</button>
		</header>
		<section>
			<header class="controls">
				<button ui:field="toggle" class="toggle-view-mode" onclick="toggleCollectionMode()">
					<i class="fas fa-table"></i><label>Table view</label>
				</button>
				<button ui:field="reset" class="reset disabled">					
					<span class="icon-holder">
						<i class="fas fa-filter"></i>
						<i class="fas fa-ban"></i>
					</span>
					<label>Clear filters</label>
				</button>
			</header>
			<dp:PersonCellList ui:field="personList"
				styleName="grid-view"></dp:PersonCellList>
		
			<footer>
				<button ui:field="fetch" class="fetch">
					<i class="fas fa-spinner"></i>
					<label>Fetch more...</label>				
				</button>
			</footer>
		</section>
	</g:HTMLPanel>
</ui:UiBinder> 